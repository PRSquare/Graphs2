<Window x:Class="Graphs2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphs2"
        xmlns:viewmodels="clr-namespace:Graphs2.ViewModels"
        xmlns:views="clr-namespace:Graphs2.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:MenuView/>

        <Canvas Grid.Row="1" Grid.Column="0" x:Name="GraphCanvas">
            <views:GraphView/>
        </Canvas>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="450 5 0 0">
            
            <Button Content="Test" Command="{Binding TestC}"/>
        </StackPanel>
    </Grid>
</Window>
